---
# Milan Aryal (http://milanaryal.com)
# The Atom Syndication Format

layout: null
icon: "/favicon.ico"
feed_limit: 25
sitemap: false
permalink: /feed.xml
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="text">{{ site.name }}</title>
  <subtitle type="text">{{ site.description }}</subtitle>
  <link rel="self" type="application/atom+xml" href="{{ site.url }}{{ page.url }}"/>
  <link rel="alternate" type="text/html" href="{{ site.url }}/"/>
  <id>{{ site.url }}/</id>
  {% if page.icon %}<icon>{{ site.url }}{{ page.icon }}</icon>{% endif %}
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <author>
    <name>{{ site.author.name }}</name>
    <uri>{{ site.author.url }}</uri>
    <email>{{ site.author.email }}</email>
  </author>
  <rights>Copyright (c) {{ site.time | date: '%Y' }}, {{ site.author.name }}</rights>
  <generator version="{{ jekyll.version }}" uri="https://github.com/jekyll/jekyll">Jekyll</generator>
  {% for post in site.posts limit: page.feed_limit %}
  <entry>
    <title type="text">{{ post.title | xml_escape }}</title>
    <link rel="alternate" type="text/html" href="{{ site.url }}{{ post.url }}"/>
    <id>{{ site.url }}{{ post.id }}</id>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>{% if post.author.name %}{{ post.author.name }}{% else %}{{ site.author.name }}{% endif %}</name>
      <uri>{% if post.author.url %}{{ post.author.url }}{% else %}{{ site.author.url }}{% endif %}</uri>
      <email>{% if post.author.email %}{{ post.author.email }}{% else %}{{ site.author.email }}{% endif %}</email>
    </author>
    <summary type="text">{{ post.excerpt | strip_html | strip_newlines | truncate: 160 | xml_escape }}</summary>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
</feed>
