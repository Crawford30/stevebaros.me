---
# Milan Aryal (http://milanaryal.com)
# Custom tiles for IE11 and/or Windows 8.1 Start Screen
#
# References:
# https://msdn.microsoft.com/en-us/library/ie/dn455106.aspx
# http://www.buildmypinnedsite.com/

layout: null
sitemap: false
---

<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="/tile.png"/>
      <square150x150logo src="/tile.png"/>
      <wide310x150logo src="/tile-wide.png"/>
      <square310x310logo src="/tile.png"/>
      <TileColor>{{ site.theme_color }}</TileColor>
    </tile>
    <notification>
      <polling-uri src="http://notifications.buildmypinnedsite.com/?feed={{site.url}}/feed.xml&amp;id=1"/>
      <polling-uri2 src="http://notifications.buildmypinnedsite.com/?feed={{site.url}}/feed.xml&amp;id=2"/>
      <polling-uri3 src="http://notifications.buildmypinnedsite.com/?feed={{site.url}}/feed.xml&amp;id=3"/>
      <polling-uri4 src="http://notifications.buildmypinnedsite.com/?feed={{site.url}}/feed.xml&amp;id=4"/>
      <polling-uri5 src="http://notifications.buildmypinnedsite.com/?feed={{site.url}}/feed.xml&amp;id=5"/>
      <frequency>30</frequency>
      <cycle>1</cycle>
    </notification>
  </msapplication>
</browserconfig>
